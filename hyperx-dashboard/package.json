{
  "name": "hyperx-project",
  "version": "1.0.0",
  "description": "HyperX Game Hosting Platform with Discord Bot and Dashboard",
  "scripts": {
    "start": "concurrently \"npm run start:dashboard\" \"npm run start:bot\"",
    "start:dashboard": "cd dashboard && npm start",
    "start:bot": "cd bot && npm start",
    "dev": "concurrently \"npm run dev:dashboard\" \"npm run dev:bot\"",
    "dev:dashboard": "cd dashboard && npm run dev",
    "dev:bot": "cd bot && npm run dev",
    "install:all": "npm install && cd dashboard && npm install && cd ../bot && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}